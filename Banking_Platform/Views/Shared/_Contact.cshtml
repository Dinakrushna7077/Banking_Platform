<section id="contact">
    <div class="container bg-light rounded-1 py-2">
        <h4><strong>Get in Touch</strong></h4>
        <div class="row">
            <!-- Contact Info -->
            <div class="col-md-7">
                <ul class="list-unstyled">
                    <li class="py-1">
                        <i class="fa fa-phone text-primary" aria-hidden="true"></i>
                        <strong>Mobile 1:</strong> +1 (555) 123-4567
                    </li>
                    <li class="py-1">
                        <i class="fa fa-phone text-primary" aria-hidden="true"></i>
                        <strong>Mobile 2:</strong> +1 (555) 987-6543
                    </li>
                    <li class="py-1">
                        <i class="fa fa-envelope text-danger" aria-hidden="true"></i>
                        <strong>Email 1:</strong>
                        <a href="mailto:project.lead1@gmail.com">project.lead1@gmail.com</a>
                    </li>
                    <li class="py-1">
                        <i class="fa fa-envelope text-danger" aria-hidden="true"></i>
                        <strong>Email 2:</strong>
                        <a href="mailto:project.lead2@gmail.com">project.lead2@gmail.com</a>
                    </li>
                </ul>
                <p><strong>Communication Channels:</strong> Email, Zoom, Slack</p>
                <p><strong>Support Hours:</strong> Mon–Fri, 9:00 AM – 6:00 PM</p>
            </div>
            <div class="col-md-5">
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        @Html.TextBox("aa", new { @class = "form-control", rows = 3, placeholder = "Name" })
                    </div>
                    <div class="form-group">
                        @Html.TextBox("bb", new { @class = "form-control", rows = 3, placeholder = "Mobile" })
                    </div>
                    <div class="form-group">
                        @Html.TextBox("bb", new { @class = "form-control", rows = 3, placeholder = "Email" })
                    </div>
                    <div class="form-group">
                        @Html.TextArea("b",new {@class="form-control",rows=3,placeholder="Message"})
                    </div>
                    <div class="form text-end">
                        <button class="px-4 py-1 rounded-1 bg-color text-white" type="submit">
                            <i class="fas fa-paper-plane"></i>
                            Submit
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
